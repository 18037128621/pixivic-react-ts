@import '../../assets/stylus/variable.styl'
.home
  &__tab
    position fixed
    bottom 0
    left 0
    right 0
    width 100%
    height 60px
    background $white
    display flex
    align-items center
    justify-content space-around
    z-index 20
    a
      padding 2px 0
      color #ccc
      &.active
        span, i
          color $theme
      div
        display flex
        justify-content center
        align-items center
        flex-direction column
        padding 5px 40px
        i
          font-size 24px
          margin-bottom 5px
        span 
          font-size 12px